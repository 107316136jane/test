    <script>

        var obj = JSON.parse('{"會員姓名": "","性別":"", "連絡電話":0, "連絡地址":0,"連絡信箱":0, "生日":""}');

        function myFunction() {
            var a = document.getElementById("j01").value;
            var b = document.getElementById("j04").value;
            var c = document.getElementById("j05").value;
            var d = document.getElementById("j06").value;
            var z = "";


            if (a == "") {
                z += "你尚未填寫會員姓名/n";
            }
            if (b == "") {
                z += "你尚未填寫連絡電話/n";
            }
            if (isNaN(b)) {
                z += "電話不是數字/n";

            }
            if (c == "") {
                z += "你尚未填寫地址/n";
            }
            if (d == "") {
                z += "你尚未填寫信箱/n";
            }
            if (z != "") {
                alert(z);

            }
            else {
                obj.會員姓名 = document.getElementById("j01").value;
                obj.連絡電話 = document.getElementById("j04").value;
                if (document.getElementById("j02").checked == true) {
                    obj.性別 = "男";
                }
                if (document.getElementById("j03").checked == true) {
                    obj.性別 = "女";
                }
                obj.生日 = document.getElementById("j07").value;
                var myJSONstr = JSON.stringify(obj);
                //alert(myJSONstr);
                //var encodedData = btoa(myJSONstr);
                HTTPPostData("Post.aspx?id=newPatient", myJSONstr);

            }
           // javascript: location.href = "107316136-11.html";
   
        }
    </script>
